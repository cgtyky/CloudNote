
@{
    ViewBag.Title = "Note Details";
}
<!--model CloudNoteV1.Models.HomeViewModel-->
@model string

@Styles.Render("~/Content/site/css")
<br />
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Note Details</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        @Html.TextAreaFor(model => model, new { @class = "form-control", @row = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-9"></div>
                    <div class="col-lg-3">
                        @Html.ActionLink("Back to My Notes", "MyNotes", "Home")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

