<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CloudNote</title>
    @Styles.Render("~/Content/site/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/summernote")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CloudNote", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Create<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Quick Note", "CreateNote", "Home")</li>
                            <li>@Html.ActionLink("Advanced Note", "CreateAdvancedNote", "Home")</li>
                            <li>@Html.ActionLink("To-Do List", "CreateToDoList", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("My Notes", "MyNotes", "Home")</li>
                    <li>@Html.ActionLink("Shared Notes", "SharedNotes", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CloudNote</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/summernote","~/Scripts/home-index.js")
    @RenderSection("scripts", required: false)
</body>
</html>
