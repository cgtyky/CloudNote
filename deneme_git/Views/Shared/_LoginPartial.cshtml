@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{

    

    <ul class="nav navbar-nav">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Create<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Quick Note", "CreateNote", "Home")</li>
                <li>@Html.ActionLink("Advanced Note", "CreateAdvancedNote", "Home")</li>
                <li>@Html.ActionLink("To-Do List", "CreateToDoList", "Home")</li>
            </ul>
        </li>
        <li>@Html.ActionLink("My Notes", "MyNotes", "Home")</li>
        <li>@Html.ActionLink("Shared Notes", "SharedNotes", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        
        @Html.AntiForgeryToken()
        
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "MyNotes", "Home")
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav">





        <li>@Html.ActionLink("About" + User.Identity.GetUserName(), "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
